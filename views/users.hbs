<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<h1>Users</h1>

<table id="users-table">
    <thead>
    <tr>
        {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
        {{/each}}
        <th>delete</th>
    </tr>
    </thead>
    <tbody>
    {{#each data}}
        <tr data-value="{{this.userID}}">
            <td>{{this.userID}}</td>
            <td>{{this.name}}</td>
            <td>{{this.address}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phoneNumber}}</td>
            <td><button onclick="deleteUser('{{this.userID}}')">Delete</button></td>
        </tr>
    {{/each}}
    </tbody>
</table>
<script src="./js/delete_users.js"></script>

<section id="add-user">
    <h2>Add New User</h2>
    <form id="add-user-form" action="/add-user-form" method="POST">
        <label for="input-name">Name:</label>
        <input type="text" id="input-name" name="input-name" required>

        <label for="input-address">Address:</label>
        <input type="text" id="input-address" name="input-address">

        <label for="input-email">E-Mail:</label>
        <input type="email" id="input-email" name="input-email" required>

        <label for="input-phoneNumber">Phone Number:</label>
        <input type="tel" id="input-phoneNumber" name="input-phoneNumber" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="123-456-6789">

        <input type="submit" value="Add User">
    </form>
</section>
